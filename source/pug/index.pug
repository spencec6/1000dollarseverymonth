  body
    .mainNav
      .header
        .logo
      .rightMenu
        .signUp Sign Me Up
        .mainNavMenu
          .hamburger-bar
          .hamburger-bar
          .hamburger-bar
    .sideNav
      .frame-container
        - for (var i=0; i<10; i++)
          .frame
            .icon
    main
      .wrapper
        .content
          .scroll-downs.hide
            .mousey
              .scroller
          .imagery
            .illo-background
            .illustration-group.moneycrate
              .illustration.parachute
              .illustration.cloud1
              .illustration.cloud2
            .illustration-group.catch
              .illustration.net
            .illustration-group.sloth
              .illustration.slothbody
              .illustration.slotharm
              .illustration.slothspill
            .illustration-group.motivation
              .illustration.carrot
              .illustration.stick
            .illustration-group.moneytree
              .illustration.money-tree
              - for (var i=0; i<10; i++)
                .illustration.dollabill
            .illustration-group.research
              .illustration.cran
              .illustration.arm
              .illustration.handle
              .illustration.paper
          .text-wrapper
          .text-wrapper
            .headline
            .message
        .tab.hide
          .scroll-arrow
            svg(viewbox='0 0 100 50')
              polyline.line(points='0,0 50,50 100,0')
        .footer.hide
          .option-section
            .option
              .selection
                svg.survey-option(viewbox='0 0 50 50')
                  circle.fill(cx='25', cy='25', r='23.252')
                  circle.stroke(cx='25', cy='25', r='23.252')
                  polyline.checkmark(points='13,24 24,36 46,-5 ')
              .option-text
                span.answer Yes.
                span.description Sign me up now!
            .option
              .selection
                 svg.survey-option(viewbox='0 0 50 50')
                    circle.fill(cx='25', cy='25', r='23.252')
                    circle.stroke(cx='25', cy='25', r='23.252')
                    polyline.checkmark(points='13,24 24,36 46,-5 ')
              .option-text
                span.answer Sure.
                span.description But there's obviously a catch.
            .option
              .selection
                 svg.survey-option(viewbox='0 0 50 50')
                    circle.fill(cx='25', cy='25', r='23.252')
                    circle.stroke(cx='25', cy='25', r='23.252')
                    polyline.checkmark(points='13,24 24,36 46,-5 ')
              .option-text
                span.answer No.
                span.description I'm content with my current finances.
    .background-pattern
      - for (var i=1; i<=30; i++)
        .pattern.dot
        .pattern.star
          svg(viewbox='0 0 50 50')
            g.star-illo
              polyline.line(points='0,50 30,50')
              polyline.line(points='70,50 100,50')
              polyline.line(points='50,0 50,30')
              polyline.line(points='50,70 50,100')
              polyline.line(points='15,15 25,25')
              polyline.line(points='85,85 75,75')
              polyline.line(points='85,15 75,25')
              polyline.line(points='15,85 25,75')
        .pattern.circle
